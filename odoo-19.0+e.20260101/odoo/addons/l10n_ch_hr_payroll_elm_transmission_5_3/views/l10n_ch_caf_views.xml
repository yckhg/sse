<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_ch_compensation_fund_view_form" model="ir.ui.view">
        <field name="name">l10n.ch.compensation.fund.view.form</field>
        <field name="model">l10n.ch.compensation.fund</field>
        <field name="inherit_id" ref="l10n_ch_hr_payroll.l10n_ch_compensation_fund_view_form"/>
        <field name="arch" type="xml">
            <field name="member_subnumber" position="after">
                <field name="paid_by_fcf"/>
            </field>
            <field name="caf_line_ids" position="before">
                <separator string="Rates"/>
            </field>
            <field name="caf_line_ids" position="after">
                <separator string="Child Allowance Scales"/>
                <field name="caf_scale_ids" nolabel="1" colspan="4">
                    <list editable="bottom">
                        <field name="min_child_rank" string="From Child"/>
                        <field name="min_age"/>
                        <field name="max_age"/>
                        <field name="allowance_type"/>
                        <field name="amount"/>
                        <field name="amount_supplementary" string="Suppl. Amount"/>
                    </list>
                </field>
            </field>
        </field>
    </record>
</odoo>
