<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_ch_hr_employee_children_view_tree" model="ir.ui.view">
        <field name="name">l10n.ch.hr.employee.children.view.tree</field>
        <field name="model">l10n.ch.hr.employee.children</field>
        <field name="arch" type="xml">
            <list string="Children" editable="bottom">
                <field name="name"/>
                <field name="birthdate"/>
                <field name="deduction_start"/>
            </list>
        </field>
    </record>

    <record id="l10n_ch_hr_employee_children_view_form" model="ir.ui.view">
        <field name="name">l10n.ch.hr.employee.children.view.form</field>
        <field name="model">l10n.ch.hr.employee.children</field>
        <field name="arch" type="xml">
            <form string="Children">
                <sheet>
                    <group>
                        <field name="name" string="First Name"/>
                        <field name="last_name"/>
                        <field name="birthdate"/>
                        <field name="sex"/>
                        <field name="l10n_ch_sv_as_number" placeholder="Unknown"/>
                        <field name="deduction_start"/>
                        <field name="deduction_end"/>
                        <separator string="Family Allowance Configuration"/>
                        <field name="allowance_eligible"/>
                        <field name="l10n_ch_child_status" invisible="not allowance_eligible"/>
                        <field name="allowance_supplementary_eligible" invisible="not allowance_eligible"/>
                        <field name="allowance_start_date" invisible="not allowance_eligible"/>
                        <field name="child_allowance_end_date" invisible="not allowance_eligible"/>
                        <field name="education_allowance_end_date" invisible="l10n_ch_child_status == 'non_responsible' or not allowance_eligible"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>