<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ec_sales_list_submission_wizard_form" model="ir.ui.view">
            <field name="name">l10n_dk_reports.ec.sales.list.submission.wizard.form</field>
            <field name="model">l10n_dk_reports.ec.sales.list.submission.wizard</field>
            <field name="inherit_id" ref="account_reports.return_submission_wizard_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="instructions" position="replace">
                    <group>
                        <group id="instructions">
                            <ol colspan="2">
                                <li>
                                    <div class="d-inline-block align-top">
                                        <span>Download your EC Sales List to submit along your VAT report.</span><br/>
                                        <button string="Download CSV" name="print_csv" type="object" class="btn-secondary mb-1"/>
                                    </div>
                                </li>
                                <li>Log in to the <a dkef="https://skat.dk/en-us/businesses/vat/vat-on-international-trade/reporting-your-international-trade" target="_blank">skat website</a>.</li>
                                <li>Submit the EC Sales List</li>
                            </ol>
                        </group>
                    </group>
                </field>
            </field>
        </record>
    </data>
</odoo>
