<?xml version="1.0"?>
<odoo>
    <record id="hr_version_list_view" model="ir.ui.view">
        <field name="name">hr.version.view.list.inherit.hr_contract_salary"</field>
        <field name="model">hr.version</field>
        <field name="inherit_id" ref="hr.hr_version_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='wage']" position="after">
                <field name="wage_on_signature"  widget="monetary" optional="hide"/>
                <field name="final_yearly_costs" widget="monetary" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
