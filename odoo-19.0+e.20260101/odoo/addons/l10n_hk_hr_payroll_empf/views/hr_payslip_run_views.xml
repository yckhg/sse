<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_run_form_inherit_l10n_hk_hr_payroll_empf" model="ir.ui.view">
        <field name="name">hr.payslip.run.form.inherit.l10n_hk_hr_payroll_empf</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <field name="schedule_pay" position="after">
                <field name="country_code" invisible="1"/>  <!-- Used in JS to add extra behavior for Hong Kong only -->
                <field name="l10n_hk_payroll_scheme_id" invisible="country_code != 'HK'"/>
                <field name="l10n_hk_payroll_group_id" invisible="country_code != 'HK'"/>
            </field>
        </field>
    </record>

    <record id="hr_payslip_run_kanban_inherit_l10n_hk_hr_payroll_empf" model="ir.ui.view">
        <field name="name">hr.payslip.run.kanban.inherit.l10n_hk_hr_payroll_empf</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_view_kanban"/>
        <field name="arch" type="xml">
            <!-- Add the button in the Pay run list view -->
            <button name="action_payment_report" position="after">
                <button name="action_open_empf_contribution_report" type="object" string="eMPF Report" class="btn btn-primary"
                        invisible="not l10n_hk_payroll_empf_report_id or state not in ['02_close', '03_paid']" />
            </button>
            <templates position="before">
                <field name="l10n_hk_payroll_empf_report_id" invisible="1" />  <!-- Required for the template to display (or hide) the button -->
            </templates>
        </field>
    </record>
</odoo>
