<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_hk_member_class_view_form" model="ir.ui.view">
        <field name="name">l10n_hk.member.class.form</field>
        <field name="model">l10n_hk.member.class</field>
        <field name="arch" type="xml">
            <form string="Member Class">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" nolabel="1" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="definition_of_service"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contribution Types" name="contribution_type_ids">
                            <field name="contribution_type_ids" readonly="False">
                                <list no_open="1" editable="bottom">
                                    <field name="contribution_type"/>
                                    <field name="contribution_option"/>
                                    <field name="amount" readonly="contribution_option == 'match'" force_save="1"/>
                                    <field name="definition_of_income" readonly="contribution_option == 'match'" required="contribution_option in ['percentage', 'top_up']" force_save="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
