<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_hk_mpf_scheme_view_form" model="ir.ui.view">
        <field name="name">l10n_hk.mpf.scheme.form</field>
        <field name="model">l10n_hk.mpf.scheme</field>
        <field name="arch" type="xml">
            <form string="MPF Scheme">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" nolabel="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="registration_number"/>
                            <field name="employer_account_number"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payroll Groups" name="payroll_groups">
                            <field name="payroll_group_ids" readonly="False">
                                <list no_open="1" editable="bottom">
                                    <field name="name"/>
                                    <field name="group_id"/>
                                    <field name="contribution_frequency"/>
                                    <field name="is_default" widget="boolean_toggle"/>
                                    <button name="action_open_employee_list" string="View Employees" type="object" icon="oi-arrow-right" class="btn-link ms-auto" invisible="not employee_ids"/>
                                </list>
                            </field>
                        </page>
                        <page string="Member Classes" name="member_classes">
                            <field name="member_class_ids" readonly="False">
                                <list editable="bottom" open_form_view="True">
                                    <field name="name"/>
                                    <field name="is_default" widget="boolean_toggle"/>
                                    <button name="action_open_employee_list" string="View Employees" type="object" icon="oi-arrow-right" class="btn-link ms-auto" invisible="not employee_ids"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="l10n_hk_mpf_scheme_view_list" model="ir.ui.view">
        <field name="name">l10n_hk.mpf.scheme.list</field>
        <field name="model">l10n_hk.mpf.scheme</field>
        <field name="arch" type="xml">
            <list string="MPF Schemes">
                <field name="name"/>
                <field name="registration_number"/>
                <field name="employer_account_number"/>
            </list>
        </field>
    </record>

    <record id="action_l10n_hk_mpf_schemes" model="ir.actions.act_window">
        <field name="name">MPF Schemes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_hk.mpf.scheme</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
