<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="l10n_hk_hr_payroll_empf.PayRunCard" t-inherit="hr_payroll.PayRunCard" t-inherit-mode="extension">
        <t t-set-slot="gen_report" position="after">
            <t t-set-slot="empf_contribution_report" isVisible="payrun.l10n_hk_payroll_empf_report_id.records.length > 0 &amp;&amp; ['02_close', '03_paid'].includes(payrun.state)">
                <ViewButton className="'btn btn-primary'"
                            clickParams="{type: 'object', name: 'action_open_empf_contribution_report'}"
                            record="props.record"
                            string.translate="eMPF Report"/>
            </t>
        </t>
    </t>
</templates>
