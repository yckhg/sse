<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <div t-name="website_sale_subscription.SubscriptionPricingSelect">
        <select t-if="combination_info.pricings and combination_info.subscription_pricing_select" name="plan_id" class="form-select plan_select fs-5" required="1">
            <t t-foreach="combination_info.pricings" t-as="pricing" t-key="pricing.plan_id">
                <option t-att-value="pricing.plan_id" t-att-disabled="pricing.can_be_added == False"
                        t-att-selected="pricing.plan_id == combination_info.subscription_default_pricing_plan_id">
                    <t t-esc="pricing.price"/>
                </option>
            </t>
        </select>
        <h5 t-else="combination_info.pricings" class="no_plan_select">
            <span class="o_subscription_price" t-esc="combination_info.subscription_default_pricing_price"/>
            <del t-if="combination_info.compare_list_price and (combination_info.compare_list_price &gt; combination_info.price)">
                <bdi dir="inherit">
                    <field name="product.compare_list_price"/>
                </bdi>
            </del>
        </h5>
    </div>
    <t t-name="website_sale_subscription.SubscriptionPricingTableSelect">
        <div t-if="combination_info.pricings and combination_info.subscription_pricing_select" class="table-responsive border rounded-2 plan_select">
            <table name="plan_id" class="table align-middle mb-0" required="1">
                <tbody>
                    <t t-foreach="combination_info.pricings" t-as="pricing" t-key="pricing.plan_id">
                        <tr>
                            <td class="col-auto">
                                <div class="d-flex align-items-center">
                                    <label t-att-for="'plan_' + pricing['plan_id']" class="mb-0 d-flex align-items-center">
                                        <input type="radio" name="plan_id" t-att-id="'plan_' + pricing['plan_id']"
                                            t-att-value="pricing['plan_id']" t-att-disabled="!pricing['can_be_added']"
                                            t-att-checked="pricing['plan_id'] == combination_info['subscription_default_pricing_plan_id']"
                                            class="form-check-input me-2 flex-shrink-0" required="1"
                                        />
                                        <span t-esc="pricing['table_name']"/>
                                    </label>
                                </div>
                            </td>
                            <td class="col-auto text-start">
                                <span class="fw-bold" t-out="pricing['table_price']"/>
                            </td>
                            <td class="col-auto">
                                <div class="d-flex align-items-center gap-1">
                                    <span t-out="pricing['to_minimum_billing_period']"/>
                                    <span class="badge text-bg-success" t-if="pricing['discounted_price']">
                                        -<t t-out="pricing['discounted_price']"/>%
                                    </span>
                                </div>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
        <h5 t-else="combination_info.pricings" class="no_plan_select">
            <span class="o_subscription_price" t-esc="combination_info.subscription_default_pricing_price"/>
            <del t-if="combination_info.compare_list_price and (combination_info.compare_list_price &gt; combination_info.price)">
                <bdi dir="inherit">
                    <field name="product.compare_list_price"/>
                </bdi>
            </del>
        </h5>
    </t>
</templates>
