<odoo>
    <data>
        <!--Enables the usage of the BOE wizards in the return validation view-->
        <record id="mod111_validation_wizard" model="ir.ui.view">
            <field name="name">mod111.validation.wizard</field>
            <field name="model">l10n_es_reports.aeat.boe.mod111.export.wizard</field>
            <field name="inherit_id" ref="l10n_es_reports.mod111_boe_wizard"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='download_boe_action']" position="attributes">
                    <attribute name="invisible">context.get('proceed_with_locking', False)</attribute>
                </xpath>
                <xpath expr="//footer" position="inside">
                    <button name="action_proceed_with_locking"
                            string="Validate"
                            type="object"
                            class="btn-primary"
                            invisible="not context.get('proceed_with_locking', False)"
                            context="{'proceed_with_locking': True}"/>
                </xpath>
            </field>
        </record>
