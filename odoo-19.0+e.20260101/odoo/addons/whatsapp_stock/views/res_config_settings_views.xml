<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.stock.whatsapp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='module_install_warning_whatsapp']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//setting[@id='stock_text_confirmation']" position="inside">
                <div class="row mt16" invisible="stock_confirmation_type != 'whatsapp' or not stock_text_confirmation">
                    <field name="stock_confirmation_wa_template_id"
                        placeholder="Choose a template..." class="oe_inline"
                        required="stock_text_confirmation and stock_confirmation_type == 'whatsapp'"
                        options="{'no_create': True}"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
