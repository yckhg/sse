<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_line_view_search" model="ir.ui.view">
        <field name="name">purchase.order.line.view.search</field>
        <field name="model">purchase.order.line</field>
        <field name="mode">primary</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <search>
                <filter
                    string="For the Last 365 Days"
                    name="last_365_days"
                    domain="[('date_order', '&gt;=', 'today -365d')]"
                    help="Purchase Order Lines processed during last 365 days"/>
                <separator/>
                <filter
                    string="Service"
                    name="service"
                    domain="[('product_type', '=', 'service')]"
                    help="Only service lines"/>
                <filter
                    string="Goods"
                    name="goods"
                    domain="[('product_type', '=', 'consu')]"
                    help="Only goods lines"/>
                <group>
                    <filter name="groupby_vendor" string="Vendor" context="{'group_by': 'partner_id'}"/>
                    <filter name="groupby_company" string="Company" context="{'group_by': 'company_id'}"/>
                    <filter name="groupby_order" string="Order Reference" context="{'group_by': 'order_id'}"/>
                    <filter name="groupby_product_category" string="Product Category" context="{'group_by': 'product_categ_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="purchase_order_line_view_list" model="ir.ui.view">
        <field name="name">purchase.order.line.view.list</field>
        <field name="model">purchase.order.line</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <list js_class="accrual_list_view" create="0">
                <header>
                    <button string="Create Accrual Entries" groups="account.group_account_user"
                            name="%(purchase.action_accrued_expense_entry)d" type="action"
                            class="btn btn-primary" data-hotkey="r"/>
                </header>
                <field name="currency_id" column_invisible="True"/> <!-- Needed for monetary widget -->
                <field name="order_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="qty_received_at_date" string="Received"/>
                <field name="qty_invoiced_at_date" string="Billed"/>
                <field name="product_uom_id" groups="uom.group_uom"/>
                <field name="price_unit" widget="monetary"/>
                <field name="amount_to_invoice_at_date" widget="monetary"/>
            </list>
        </field>
    </record>

    <record id="purchase_order_line_accrual_bill_to_receive_action" model="ir.actions.act_window">
        <field name="name">Bill To Receive</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="purchase_accountant.purchase_order_line_view_list"/>
        <field name="search_view_id" ref="purchase_accountant.purchase_order_line_view_search"/>
        <field name="domain">[('bill_to_receive', '=', True)]</field>
        <field name="context">{'search_default_last_365_days': 1, 'search_default_groupby_vendor': 1}</field>
    </record>
    <record id="purchase_order_line_accrual_prepaid_expenses_action" model="ir.actions.act_window">
        <field name="name">Billed Not Received</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="purchase_accountant.purchase_order_line_view_list"/>
        <field name="search_view_id" ref="purchase_accountant.purchase_order_line_view_search"/>
        <field name="domain">[('prepaid_expense', '=', True)]</field>
        <field name="context">{'search_default_last_365_days': 1, 'search_default_groupby_vendor': 1}</field>
    </record>

    <menuitem id="purchase_accountant_accrual_menu" name="Purchases" parent="account.account_audit_menu" sequence="55">
        <menuitem id="menu_purchase_order_line_accrual_bill_to_receives_action"
            name="Bill To Receive"
            action="purchase_accountant.purchase_order_line_accrual_bill_to_receive_action"
            groups="account.group_account_readonly"/>
        <menuitem id="menu_purchase_order_line_accrual_prepaid_expenses_action"
            name="Billed Not Received"
            action="purchase_accountant.purchase_order_line_accrual_prepaid_expenses_action"
            groups="account.group_account_readonly"/>
    </menuitem>
</odoo>
