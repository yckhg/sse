<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_view_form" model="ir.ui.view">
            <field name="name">product.template.view.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="l10n_br_avatax.view_product_template_form"/>
            <field name="arch" type="xml">
                <field name="l10n_br_ncm_code_id" position="after">
                    <field name="l10n_br_nbs_id" invisible="'BR' not in fiscal_country_codes or type != 'service'"/>
                    <field name="l10n_br_legal_uom_id" invisible="'BR' not in fiscal_country_codes" groups="uom.group_uom"/>
                    <field name="l10n_br_taxable_is" invisible="'BR' not in fiscal_country_codes"/>
                    <field name="l10n_br_operation_type_sales_id" invisible="'BR' not in fiscal_country_codes"/>
                    <field name="l10n_br_operation_type_purchases_id" invisible="'BR' not in fiscal_country_codes"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
