<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_search_inherit_account_sepa_pain_09" model="ir.ui.view">
        <field name="name">account.payment.search.inherit.account_sepa_pain_09</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="iso20022_uetr"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_form_inherit_account_sepa_pain_09" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.account_sepa_pain_09</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id'][last()]" position="after">
                <field name="end_to_end_uuid" invisible="payment_method_code not in ('iso20022','sepa_ct', 'iso20022_se', 'iso20022_ch', 'iso20022_us')" groups="base.group_no_one"/>
                <field name="iso20022_uetr" invisible="payment_method_code not in ('iso20022','sepa_ct') or (payment_method_code == 'sepa_ct' and sepa_pain_version != 'pain.001.001.09')" groups="base.group_no_one"/>
                <field name="iso20022_charge_bearer" invisible="payment_method_code not in ['iso20022', 'iso20022_se', 'iso20022_ch']" required="1"/>
                <field name="iso20022_priority" invisible="not payment_method_is_iso20022" required="payment_method_is_iso20022"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="required" add="payment_method_code == 'sepa_ct'" separator=" or "/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_tree_inherit_account_sepa_pain_09" model="ir.ui.view">
        <field name="name">account.payment.list.inherit.account_sepa_pain_09</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree" />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="iso20022_uetr" optional="hide"/>
                <field
                    name="iso20022_priority"
                    invisible="not payment_method_is_iso20022"
                    required="payment_method_is_iso20022"
                    optional="hide"
                />
            </field>
        </field>
    </record>

    <record id="view_batch_payment_form_inherit_account_iso20022" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.account_iso20022</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form" />
        <field name="arch" type="xml">
            <field name="amount_signed" position="after">
                <field
                    name="iso20022_priority"
                    column_invisible="not parent.payment_method_is_iso20022"
                    optional="hide"
                />
            </field>
        </field>
    </record>
</odoo>
