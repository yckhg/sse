<?xml version="1.0" encoding="utf-8"?>
<odoo auto_sequence="1">
    <record id="l10n_tw_balance_sheet" model="account.report">
        <field name="name">Balance Sheet</field>
        <field name="root_report_id" ref="account_reports.balance_sheet"/>
        <field name="filter_date_range" eval="False"/>
        <field name="filter_analytic_groupby" eval="True"/>
        <field name="filter_unfold_all" eval="True"/>
        <field name="filter_journals" eval="True"/>
        <field name="filter_multi_company">selector</field>
        <field name="default_opening_date_filter">today</field>
        <field name="country_id" ref="base.tw"/>
        <field name="column_ids">
            <record id="l10n_tw_balance_sheet_balance" model="account.report.column">
                <field name="name">Balance</field>
                <field name="expression_label">balance</field>
            </record>
        </field>
        <field name="line_ids">
            <record id="l10n_tw_balance_sheet_tw_a" model="account.report.line">
                <field name="name">ASSETS</field>
                <field name="name@zh_TW">資產</field>
                <field name="code">TW_A</field>
                <field name="hierarchy_level">0</field>
                <field name="foldable" eval="False"/>
                <field name="expression_ids">
                    <record id="l10n_tw_balance_sheet_tw_a_balance" model="account.report.expression">
                        <field name="label">balance</field>
                        <field name="engine">aggregation</field>
                        <field name="formula">TW_CA.balance + TW_NCA.balance</field>
                    </record>
                </field>
                <field name="children_ids">
                    <record id="l10n_tw_balance_sheet_tw_ca" model="account.report.line">
                        <field name="name">Current assets</field>
                        <field name="name@zh_TW">流動資產</field>
                        <field name="code">TW_CA</field>
                        <field name="hierarchy_level">3</field>
                        <field name="foldable" eval="True"/>
                        <field name="expression_ids">
                            <record id="l10n_tw_balance_sheet_tw_ca_balance" model="account.report.expression">
                                <field name="label">balance</field>
                                <field name="engine">aggregation</field>
                                <field name="formula">TW_CCA.balance + TW_CFA.balance + TW_REC.balance + TW_CINV.balance + TW_OCA.balance</field>
                            </record>
                        </field>
                        <field name="children_ids">
                            <record id="l10n_tw_balance_sheet_tw_cca" model="account.report.line">
                                <field name="name">Cash and cash equivalents</field>
                                <field name="name@zh_TW">現金及約當現金</field>
                                <field name="code">TW_CCA</field>
                                <field name="hierarchy_level">5</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_cca_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">account_codes</field>
                                        <field name="formula">110</field>
                                    </record>
                                </field>
                            </record>
                            <record id="l10n_tw_balance_sheet_tw_cfa" model="account.report.line">
                                <field name="name">Current financial assets</field>
                                <field name="name@zh_TW">流動金融資產</field>
                                <field name="code">TW_CFA</field>
                                <field name="hierarchy_level">5</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_cfa_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">account_codes</field>
                                        <field name="formula">111 + 112 + 113 + 122</field>
                                    </record>
                                </field>
                            </record>
                            <record id="l10n_tw_balance_sheet_tw_rec" model="account.report.line">
                                <field name="name">Accounts receivables &amp; other receivables</field>
                                <field name="name@zh_TW">應收帳款及其他應收款</field>
                                <field name="code">TW_REC</field>
                                <field name="hierarchy_level">5</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_rec_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">account_codes</field>
                                        <field name="formula">115 + 117</field>
                                    </record>
                                </field>
                            </record>
                            <record id="l10n_tw_balance_sheet_tw_cinv" model="account.report.line">
                                <field name="name">Current inventories</field>
                                <field name="name@zh_TW">存貨</field>
                                <field name="code">TW_CINV</field>
                                <field name="hierarchy_level">5</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_cinv_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">account_codes</field>
                                        <field name="formula">13</field>
                                    </record>
                                </field>
                            </record>
                            <record id="l10n_tw_balance_sheet_tw_oca" model="account.report.line">
                                <field name="name">Other current assets</field>
                                <field name="name@zh_TW">其他流動資產</field>
                                <field name="code">TW_OCA</field>
                                <field name="hierarchy_level">5</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_oca_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">account_codes</field>
                                        <field name="formula">14</field>
                                    </record>
                                </field>
                            </record>
                        </field>
                    </record>
                    <record id="l10n_tw_balance_sheet_tw_nca" model="account.report.line">
                        <field name="name">Non-current assets</field>
                        <field name="name@zh_TW">非流動資產</field>
                        <field name="code">TW_NCA</field>
                        <field name="hierarchy_level">3</field>
                        <field name="groupby">account_id</field>
                        <field name="foldable" eval="True"/>
                        <field name="expression_ids">
                            <record id="l10n_tw_balance_sheet_tw_nca_balance" model="account.report.expression">
                                <field name="label">balance</field>
                                <field name="engine">account_codes</field>
                                <field name="formula">15 + 16 + 17 + 18</field>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
            <record id="l10n_tw_balance_sheet_tw_l" model="account.report.line">
                <field name="name">LIABILITIES</field>
                <field name="name@zh_TW">負債</field>
                <field name="code">TW_L</field>
                <field name="hierarchy_level">0</field>
                <field name="foldable" eval="False"/>
                <field name="expression_ids">
                    <record id="l10n_tw_balance_sheet_tw_l_balance" model="account.report.expression">
                        <field name="label">balance</field>
                        <field name="engine">aggregation</field>
                        <field name="formula">TW_CL.balance + TW_NCL.balance</field>
                    </record>
                </field>
                <field name="children_ids">
                    <record id="l10n_tw_balance_sheet_tw_cl" model="account.report.line">
                        <field name="name">Current liabilities</field>
                        <field name="name@zh_TW">流動負債</field>
                        <field name="code">TW_CL</field>
                        <field name="hierarchy_level">3</field>
                        <field name="groupby">account_id</field>
                        <field name="foldable" eval="True"/>
                        <field name="expression_ids">
                            <record id="l10n_tw_balance_sheet_tw_cl_balance" model="account.report.expression">
                                <field name="label">balance</field>
                                <field name="engine">account_codes</field>
                                <field name="formula">- 21 - 22 - 23</field>
                            </record>
                        </field>
                    </record>
                    <record id="l10n_tw_balance_sheet_tw_ncl" model="account.report.line">
                        <field name="name">Non-current liabilities</field>
                        <field name="name@zh_TW">非流動負債</field>
                        <field name="code">TW_NCL</field>
                        <field name="hierarchy_level">3</field>
                        <field name="groupby">account_id</field>
                        <field name="foldable" eval="True"/>
                        <field name="expression_ids">
                            <record id="l10n_tw_balance_sheet_tw_ncl_balance" model="account.report.expression">
                                <field name="label">balance</field>
                                <field name="engine">account_codes</field>
                                <field name="formula">- 25 - 26</field>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
            <record id="l10n_tw_balance_sheet_tw_eq" model="account.report.line">
                <field name="name">EQUITY</field>
                <field name="name@zh_TW">權益</field>
                <field name="code">TW_EQ</field>
                <field name="hierarchy_level">0</field>
                <field name="foldable" eval="False"/>
                <field name="expression_ids">
                    <record id="l10n_tw_balance_sheet_tw_eq_balance" model="account.report.expression">
                        <field name="label">balance</field>
                        <field name="engine">aggregation</field>
                        <field name="formula">TW_EAO.balance + TW_NCI.balance + TW_TS.balance</field>
                    </record>
                </field>
                <field name="children_ids">
                    <record id="l10n_tw_balance_sheet_tw_eao" model="account.report.line">
                        <field name="name">Equity attributable to owners of parent company</field>
                        <field name="name@zh_TW">歸屬於母公司業主之權益</field>
                        <field name="code">TW_EAO</field>
                        <field name="hierarchy_level">3</field>
                        <field name="foldable" eval="True"/>
                        <field name="expression_ids">
                            <record id="l10n_tw_balance_sheet_tw_eao_balance" model="account.report.expression">
                                <field name="label">balance</field>
                                <field name="engine">aggregation</field>
                                <field name="formula">TW_SC.balance + TW_CS.balance + TW_RERS.balance + TW_OEI.balance  + TW_UE.balance</field>
                            </record>
                        </field>
                        <field name="children_ids">
                            <record id="l10n_tw_balance_sheet_tw_sc" model="account.report.line">
                                <field name="name">Share capital</field>
                                <field name="name@zh_TW">股本</field>
                                <field name="code">TW_SC</field>
                                <field name="hierarchy_level">5</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_sc_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">account_codes</field>
                                        <field name="formula">-31</field>
                                    </record>
                                </field>
                            </record>
                            <record id="l10n_tw_balance_sheet_tw_cs" model="account.report.line">
                                <field name="name">Capital surplus</field>
                                <field name="name@zh_TW">資本公積</field>
                                <field name="code">TW_CS</field>
                                <field name="hierarchy_level">5</field>
                                <field name="foldable" eval="False"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_cs_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">account_codes</field>
                                        <field name="formula">-32</field>
                                    </record>
                                </field>
                            </record>
                            <record id="l10n_tw_balance_sheet_tw_ue" model="account.report.line">
                                <field name="name">Unallocated earnings</field>
                                <field name="name@zh_TW">尚未分攤之盈餘</field>
                                <field name="code">TW_UE</field>
                                <field name="hierarchy_level">5</field>
                                <field name="foldable" eval="False"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_ue_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">aggregation</field>
                                        <field name="formula">TW_CUE.balance + TW_PUE.balance</field>
                                    </record>
                                </field>
                                <field name="children_ids">
                                    <record id="l10n_tw_balance_sheet_tw_cue" model="account.report.line">
                                        <field name="name">Current year unallocated earnings</field>
                                        <field name="name@zh_TW">本期未分配盈餘</field>
                                        <field name="code">TW_CUE</field>
                                        <field name="hierarchy_level">7</field>
                                        <field name="foldable" eval="False"/>
                                        <field name="expression_ids">
                                            <record id="l10n_tw_balance_sheet_tw_cue_pnl" model="account.report.expression">
                                                <field name="label">pnl</field>
                                                <field name="engine">aggregation</field>
                                                <field name="formula">TW_PNLCOAT.balance</field>
                                                <field name="date_scope">from_fiscalyear</field>
                                                <field name="subformula">cross_report(l10n_tw_reports.l10n_tw_profit_and_loss)</field>
                                            </record>
                                            <record id="l10n_tw_balance_sheet_tw_cue_alloc" model="account.report.expression">
                                                <field name="label">alloc</field>
                                                <field name="engine">account_codes</field>
                                                <field name="formula">-37</field>
                                                <field name="date_scope">from_fiscalyear</field>
                                            </record>
                                            <record id="l10n_tw_balance_sheet_tw_cue_balance" model="account.report.expression">
                                                <field name="label">balance</field>
                                                <field name="engine">aggregation</field>
                                                <field name="formula">TW_CUE.pnl + TW_CUE.alloc</field>
                                            </record>
                                        </field>
                                    </record>
                                    <record id="l10n_tw_balance_sheet_tw_pue" model="account.report.line">
                                        <field name="name">Previous years unallocated earnings</field>
                                        <field name="name@zh_TW">以前年度未分配盈餘</field>
                                        <field name="code">TW_PUE</field>
                                        <field name="hierarchy_level">7</field>
                                        <field name="foldable" eval="False"/>
                                        <field name="expression_ids">
                                            <record id="l10n_tw_balance_sheet_tw_pue_alloc_earnings" model="account.report.expression">
                                                <field name="label">alloc_earnings</field>
                                                <field name="engine">account_codes</field>
                                                <field name="formula">-37</field>
                                                <field name="date_scope">from_beginning</field>
                                            </record>
                                            <record id="l10n_tw_balance_sheet_tw_pue_balance_domain" model="account.report.expression">
                                                <field name="label">balance_domain</field>
                                                <field name="engine">aggregation</field>
                                                <field name="formula">TW_PNLCOAT.balance</field>
                                                <field name="date_scope">from_beginning</field>
                                                <field name="subformula">cross_report(l10n_tw_reports.l10n_tw_profit_and_loss)</field>
                                            </record>
                                            <record id="l10n_tw_balance_sheet_tw_pue_balance" model="account.report.expression">
                                                <field name="label">balance</field>
                                                <field name="engine">aggregation</field>
                                                <field name="formula">TW_PUE.balance_domain + TW_PUE.alloc_earnings - TW_CUE.balance</field>
                                            </record>
                                        </field>
                                    </record>
                                </field>
                            </record>
                            <record id="l10n_tw_balance_sheet_tw_rers" model="account.report.line">
                                <field name="name">Retained earnings &amp; reserves</field>
                                <field name="name@zh_TW">保留盈餘及公積</field>
                                <field name="code">TW_RERS</field>
                                <field name="hierarchy_level">5</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_rers_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">aggregation</field>
                                        <field name="formula">TW_RS.balance + TW_RE.balance + TW_AOCI.balance</field>
                                    </record>
                                </field>
                                <field name="children_ids">
                                    <record id="l10n_tw_balance_sheet_tw_rs" model="account.report.line">
                                        <field name="name">Reserves</field>
                                        <field name="name@zh_TW">公積</field>
                                        <field name="code">TW_RS</field>
                                        <field name="hierarchy_level">7</field>
                                        <field name="groupby">account_id</field>
                                        <field name="foldable" eval="True"/>
                                        <field name="expression_ids">
                                            <record id="l10n_tw_balance_sheet_tw_rs_balance" model="account.report.expression">
                                                <field name="label">balance</field>
                                                <field name="engine">account_codes</field>
                                                <field name="formula">-33\(3300)</field>
                                            </record>
                                        </field>
                                    </record>
                                    <record id="l10n_tw_balance_sheet_tw_aoci" model="account.report.line">
                                        <field name="name">Accumulated other comprehensive income</field>
                                        <field name="name@zh_TW">累計其他綜合損益</field>
                                        <field name="code">TW_AOCI</field>
                                        <field name="hierarchy_level">7</field>
                                        <field name="groupby">account_id</field>
                                        <field name="foldable" eval="True"/>
                                        <field name="expression_ids">
                                            <record id="l10n_tw_balance_sheet_tw_aoci_balance" model="account.report.expression">
                                                <field name="label">balance</field>
                                                <field name="engine">account_codes</field>
                                                <field name="formula">-91 -92</field>
                                                <field name="date_scope">from_beginning</field>
                                            </record>
                                        </field>
                                    </record>
                                    <record id="l10n_tw_balance_sheet_tw_re" model="account.report.line">
                                        <field name="name">Retained earnings</field>
                                        <field name="name@zh_TW">保留盈餘</field>
                                        <field name="code">TW_RE</field>
                                        <field name="hierarchy_level">7</field>
                                        <field name="foldable" eval="False"/>
                                        <field name="expression_ids">
                                            <record id="l10n_tw_balance_sheet_tw_re_balance" model="account.report.expression">
                                                <field name="label">balance</field>
                                                <field name="engine">aggregation</field>
                                                <field name="formula">TW_URE.balance + TW_PYRE.balance</field>
                                            </record>
                                        </field>
                                        <field name="children_ids">
                                            <record id="l10n_tw_balance_sheet_tw_ure" model="account.report.line">
                                                <field name="name">Current year unappropriated retained earnings</field>
                                                <field name="name@zh_TW">未分配盈餘</field>
                                                <field name="code">TW_URE</field>
                                                <field name="hierarchy_level">7</field>
                                                <field name="foldable" eval="False"/>
                                                <field name="expression_ids">
                                                    <record id="l10n_tw_balance_sheet_tw_ure_balance" model="account.report.expression">
                                                        <field name="label">balance</field>
                                                        <field name="engine">account_codes</field>
                                                        <field name="formula">-3300</field>
                                                        <field name="date_scope">from_fiscalyear</field>
                                                    </record>
                                                </field>
                                            </record>
                                            <record id="l10n_tw_balance_sheet_tw_pyre" model="account.report.line">
                                                <field name="name">Previous years retained earnings</field>
                                                <field name="name@zh_TW">前期保留盈餘</field>
                                                <field name="code">TW_PYRE</field>
                                                <field name="hierarchy_level">7</field>
                                                <field name="foldable" eval="False"/>
                                                <field name="expression_ids">
                                                    <record id="l10n_tw_balance_sheet_tw_pyre_balance" model="account.report.expression">
                                                        <field name="label">balance</field>
                                                        <field name="engine">aggregation</field>
                                                        <field name="formula">TW_PYRE.sub_balance - TW_URE.balance</field>
                                                        <field name="date_scope">from_beginning</field>
                                                    </record>
                                                    <record id="l10n_tw_balance_sheet_tw_pyre_sub_balance" model="account.report.expression">
                                                        <field name="label">sub_balance</field>
                                                        <field name="engine">account_codes</field>
                                                        <field name="formula">-3300</field>
                                                        <field name="date_scope">from_beginning</field>
                                                    </record>
                                                </field>
                                            </record>
                                        </field>
                                    </record>
                                </field>
                            </record>
                            <record id="l10n_tw_balance_sheet_tw_oei" model="account.report.line">
                                <field name="name">Other equity interest</field>
                                <field name="name@zh_TW">其他權益合計</field>
                                <field name="code">TW_OEI</field>
                                <field name="hierarchy_level">5</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="l10n_tw_balance_sheet_tw_oei_balance" model="account.report.expression">
                                        <field name="label">balance</field>
                                        <field name="engine">account_codes</field>
                                        <field name="formula">-34</field>
                                    </record>
                                </field>
                            </record>
                        </field>
                    </record>
                    <record id="l10n_tw_balance_sheet_tw_nci" model="account.report.line">
                        <field name="name">Non-controlling interests</field>
                        <field name="name@zh_TW">非控制權益</field>
                        <field name="code">TW_NCI</field>
                        <field name="hierarchy_level">3</field>
                        <field name="groupby">account_id</field>
                        <field name="foldable" eval="True"/>
                        <field name="expression_ids">
                            <record id="l10n_tw_balance_sheet_tw_nci_balance" model="account.report.expression">
                                <field name="label">balance</field>
                                <field name="engine">account_codes</field>
                                <field name="formula">-36</field>
                            </record>
                        </field>
                    </record>
                    <record id="l10n_tw_balance_sheet_tw_ts" model="account.report.line">
                        <field name="name">Treasury stock</field>
                        <field name="name@zh_TW">庫藏股票</field>
                        <field name="code">TW_TS</field>
                        <field name="hierarchy_level">3</field>
                        <field name="foldable" eval="False"/>
                        <field name="expression_ids">
                            <record id="l10n_tw_balance_sheet_tw_ts_balance" model="account.report.expression">
                                <field name="label">balance</field>
                                <field name="engine">account_codes</field>
                                <field name="formula">-35</field>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
            <record id="l10n_tw_balance_sheet_tw_lbeq" model="account.report.line">
                <field name="name">LIABILITIES + EQUITY</field>
                <field name="name@zh_TW">負債及權益總計</field>
                <field name="code">TW_LBEQ</field>
                <field name="hierarchy_level">0</field>
                <field name="foldable" eval="False"/>
                <field name="expression_ids">
                    <record id="l10n_tw_balance_sheet_tw_lbeq_balance" model="account.report.expression">
                        <field name="label">balance</field>
                        <field name="engine">aggregation</field>
                        <field name="formula">TW_L.balance + TW_EQ.balance</field>
                    </record>
                </field>
            </record>
        </field>
    </record>
</odoo>
