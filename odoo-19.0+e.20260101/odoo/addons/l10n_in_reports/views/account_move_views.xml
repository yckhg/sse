<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_line_tree_l10n_in" model="ir.ui.view">
        <field name="name">account.move.line.list.l10n_in</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit']" position="after">
                <field name="l10n_in_hsn_code" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_move_line_form_l10n_in" model="ir.ui.view">
        <field name="name">account.move.line.form.l10n_in</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="l10n_in_hsn_code"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_form_inherit_account" model="ir.ui.view">
        <field name="name">account.move.form.inherit.account</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position='after'>
                <t invisible="not l10n_in_gst_efiling_feature_enabled">
                    <div role="status" class="alert alert-warning o_row"
                        invisible="not l10n_in_exception
                                   or move_type not in ('in_invoice', 'in_receipt', 'in_refund')
                                   or l10n_in_gstr2b_reconciliation_status == 'manually_matched'">
                        <field name="l10n_in_exception" readonly="1"/>
                        <button name="action_l10n_in_bill_set_gstr2b_manual_matching"
                            string="Manually Match"
                            type="object"
                            class="oe_link oe_inline"
                            groups="account.group_account_manager"
                            invisible="country_code != 'IN' or state != 'posted' or move_type not in ('in_invoice', 'in_refund')
                            or l10n_in_gstr2b_reconciliation_status != 'partially_matched'"
                        />
                    </div>
                    <div class="alert alert-warning mb-0" role="alert"
                        invisible="not l10n_in_reversed_entry_warning">
                        Credit notes for invoices from the financial year cannot be included in GSTR after November 30th.
                        Hence, it is advisable to remove the tax from the credit note.
                    </div>
                </t>
            </xpath>
            <xpath expr="//button[@name='button_request_cancel']" position="after">
                <button name="action_l10n_in_bill_reset_gstr2b_manual_matching"
                    string="Reset Manual Match"
                    type="object" icon="fa-undo"
                    groups="account.group_account_manager"
                    invisible="country_code != 'IN' or state != 'posted' or move_type not in ('in_invoice', 'in_refund')
                    or l10n_in_gstr2b_reconciliation_status != 'manually_matched'"
                />
            </xpath>
            <xpath expr="//field[@name='invoice_source_email']" position="after">
                <field name="l10n_in_gstr2b_reconciliation_status" readonly="1" invisible="not l10n_in_gst_efiling_feature_enabled or move_type not in ('in_invoice', 'in_receipt', 'in_refund') or country_code != 'IN'"/>
            </xpath>
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="l10n_in_irn_number" invisible="country_code != 'IN' or not l10n_in_irn_number" class="text-break"/>
            </xpath>
            <xpath expr="//header" position='after'>
                <div role="status" class="alert alert-warning"
                     invisible="not l10n_in_fetch_vendor_edi_feature_enabled or not l10n_in_irn_number or state != 'draft'">
                    <div class="o_row">
                        E-Invoice IRN is available. Fetching data from the GSTN portal.
                        <button name="l10n_in_update_move_using_irn" type="object" class="oe_link oe_inline">
                            <i class="oi oi-fw o_button_icon oi-arrow-right"/>
                            Fetch
                        </button>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.invoice.select.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/group/filter[@name='status']" position="after">
                <filter string="GSTR2B status" name="l10n_in_gstr2b_status" context="{'group_by': 'l10n_in_gstr2b_reconciliation_status'}" />
            </xpath>
        </field>
    </record>
</odoo>
