<templates>
    <t t-name="account_reports.AccrualListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="primary">
        <xpath expr="." position="inside">
            <div id="filter_date" t-ref="filterDate"
                 class="d-print-none me-1"
                 t-on-click="onDateClick">
                <button class="btn btn-secondary">
                    <i class="fa fa-calendar me-1"/>As of <t t-out="date"/>
                </button>
            </div>
            <div class="d-none d-print-block">
                At the date of <t t-out="date"/>
            </div>
        </xpath>
    </t>
</templates>
